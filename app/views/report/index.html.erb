<div class='row'>
  <form method='get' class='form-inline'>

  <div class='col col-sm-4'>
    <div class="form-group">
      <div class="input-group date" id="datetimepicker-end" data-target-input="nearest">
        <input type="text" class="form-control datetimepicker-input" data-target="#datetimepicker-end" name="datetimepicker-end" />
        <div class="input-group-append" data-target="#datetimepicker-end" data-toggle="datetimepicker">
          <div class="input-group-text"><i class="fa fa-calendar"></i></div>
        </div>
      </div>
    </div>
  </div>

  <div class='col col-sm-3'>
    <select id='interval' name='interval'>
<% @intervals.each do |i| %>
      <option value='<%= i[:interval] %>'<%= i[:interval] == @interval ? ' selected' : '' %>><%= i[:name] %></option>
<% end %>
    </select>
  </div>

  <div class='col col-sm-4'>
    <div class="form-group">
      <div class="input-group date" id="datetimepicker-start" data-target-input="nearest">
        <input type="text" class="form-control datetimepicker-input" data-target="#datetimepicker-start" name="datetimepicker-start" />
        <div class="input-group-append" data-target="#datetimepicker-start" data-toggle="datetimepicker">
          <div class="input-group-text"><i class="fa fa-calendar"></i></div>
        </div>
      </div>
    </div>
  </div>

  <div class='col col-sm-1'>
    <input type='submit' class='btn btn-info' value='Generate Report'>
  </div>

  </form>
</div>

<div class='row'>
  <div class='col'>
<h2>Rooms</h2>
<table class='table'>
  <tr>
    <th>Room</th>
    <th>Max temp</th>
    <th>Min temp</th>
    <th>Samples</th>
  </tr>
<% @furballs.each do |furball| %>
  <tr>
    <td><%= furball[:name] %></td>
    <td><%= furball[:max_temp] %></td>
    <td><%= furball[:min_temp] %></td>
    <td><%= '%0.1f' % ((furball[:samples]*100.0)  / @minutes_in_interval) %> % (<%= furball[:samples] %> / <%= @minutes_in_interval %>)
  </tr>
<% end %>
</table>

<h2>Weather</h2>
<table class='table'>
  <tr>
    <th>Station</th>
    <th>Max temp</th>
    <th>Min temp</th>
    <th>Max humidity</th>
    <th>Min humidity</th>
  </tr>
<% @weather_stations.each do |station| %>
  <tr>
    <td><%= station[:name] %></td>
    <td><%= station[:max_temp] %></td>
    <td><%= station[:min_temp] %></td>
    <td><%= station[:max_humidity] %></td>
    <td><%= station[:min_humidity] %></td>
  </tr>
<% end %>
</table>

<h2>Access</h2>
<table class='table'>
  <tr>
    <th>Door</th>
    <th>Opened</th>
    <th>Unlocked</th>
    <th>Locked</th>
    <th>Denied</th>
  </tr>
<% @doors.each do |door| %>
  <tr>
    <td><%= door[:name] %></td>
    <td><%= door[:opened] %></td>
    <td><%= door[:unlocked] %></td>
    <td><%= door[:locked] %></td>
    <td><%= door[:denied] %></td>
  </tr>
<% end %>
</table>

<h2>Network</h2>
<hr>
<p>
Maximum active hosts <%= @network_active_hosts_max %>
</p>

<h2>Laser Printer</h2>
<table class='table'>
  <tr>
    <th>Printer</th>
    <th>Pages</th>
    <th>Errors</th>
  </tr>
  <tr>
    <td>Brother HL-4150CDN series</td>
    <td><%= @printer_pages %></td>
</table>
  </div>
</div>
